@using (Html.BeginForm("TableList", "Store", FormMethod.Post))
{
    <div class="contaner">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <input class="btn btn-primary" @*name="read"*@ type="submit" value="Показать список">
            </li>
            @if (ViewBag.count > 0)
            {
                <li class="nav-item">
                    <p>Количество продуктов в магазине: @ViewBag.count</p>
                    <p>
                        Количество продуктов на прилавке: @ViewBag.count_on_counter
