@{
    ViewData["Title"] = "Store";
}

@using (Html.BeginForm("Add", "Store", FormMethod.Post))
{
    <div class="contaner">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <p>Наименование продукта</p>
                <input type="text" name="Name" value="" />
            </li>

            <li class="nav-item">

                @if (ViewBag.action == "add")
                {
                    @if (ViewBag.message == "Продукт добавлен")
                    {
                        <p id="table" name="table">@ViewBag.message (наименование товара: @ViewBag.message_item_name)</p>
                        <p>
                            Количество продуктов в магазине стало: @ViewBag.count
                        </p>
                    }
                    else
                    {
                        <p id="table" name="table">@ViewBag.message</p>
                    }
                }
            </li>

            <li class="nav-item">
                <input class="btn btn-primary" @*name="add"*@ type="submit" value="Добавить">
            </li>

        </ul>
    </div>}

